{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "lift-calculator",
  "title": "Lift Calculator",
  "description": "Calculate various lifting numbers including 1RM, warmup sets, and training volumes.",
  "icon": "command-icon.png",
  "author": "marianbreitmeyer",
  "license": "MIT",
  "commands": [
    {
      "name": "lift-max",
      "title": "Calculate 1RM",
      "subtitle": "One Rep Max Calculator",
      "description": "Calculate your one rep max based on weight and repetitions",
      "mode": "view",
      "arguments": [
        {
          "name": "weight",
          "placeholder": "Enter weight (e.g. 225)",
          "type": "text",
          "required": true
        },
        {
          "name": "reps",
          "placeholder": "Enter repetitions (e.g. 8)",
          "type": "text",
          "required": true
        }
      ]
    },
    {
      "name": "lift-warmup",
      "title": "Calculate Warmup",
      "subtitle": "Warmup Sets Calculator",
      "description": "Calculate appropriate warmup sets based on your working weight",
      "mode": "view",
      "arguments": [
        {
          "name": "weight",
          "placeholder": "Working weight (e.g. 225)",
          "type": "text",
          "required": true
        }
      ]
    },
    {
      "name": "lift-volume",
      "title": "Calculate Volume",
      "subtitle": "Training Volume Calculator",
      "description": "Get training volume recommendations based on your one rep max",
      "mode": "view",
      "arguments": [
        {
          "name": "oneRepMax",
          "placeholder": "Your 1RM weight (e.g. 225)",
          "type": "text",
          "required": true
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "unitSystem",
      "title": "Weight Unit",
      "description": "Choose between pounds (lbs) or kilograms (kg)",
      "type": "dropdown",
      "required": false,
      "default": "kg",
      "data": [
        {
          "title": "Pounds (lbs)",
          "value": "lbs"
        },
        {
          "title": "Kilograms (kg)",
          "value": "kg"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.70.2",
    "@raycast/utils": "^1.13.5"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@raycast/eslint-config": "^1.0.6",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish",
    "test": "jest",
    "test:watch": "jest --watch"
  }
}
